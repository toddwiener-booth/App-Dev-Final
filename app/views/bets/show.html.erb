</div>

<hr>


<div>
  <div>
    <h2>
      Edit bet
    </h2>

    <form action="/modify_bet/<%= @the_bet.id %>"  method="post" >
        <label for="team_bet">Team bet</label>
        <select name="query_team_bet" id="query_team_bet">
        
        <% @list_of_teams.each do |team| %>
          <% if team.team_name == @the_bet.team_bet %>
          <option value="<%= team.team_name %>" selected>
              <%= team.team_name %>
          </option>
          <% end %>
          <% if team.team_name != @the_bet.team_bet %>
          <option value="<%= team.team_name %>">
              <%= team.team_name %>
          </option>
          <% end %>
        <% end %>
        </select>

      <div>
        <label for="favorite_or_underdog_box">
          Odds
        </label>


        <select name="query_favorite_or_underdog" id="query_favorite_or_underdog">
          <option value="Favorite" <% if @the_bet.favorite_or_underdog == "Favorite" %> <%= "selected" %> <% end %>>
              -
          </option>
          <option value="Underdog" <% if @the_bet.favorite_or_underdog == "Underdog" %> <%= "selected" %> <% end %>>
              +
          </option>
        </select>

        <input type="text" id="odds_box" name="query_odds" value="<%= @the_bet.odds %>">
      </div>

        <label for="opposing_team_box">Opposing team</label>
        <select name="query_opposing_team" id="query_opposing_team">

        <% @list_of_teams.each do |team| %>
          <% if team.team_name == @the_bet.opposing_team %>
          <option value="<%= team.team_name %>" selected>
              <%= team.team_name %>
          </option>
          <% end %>
          <% if team.team_name != @the_bet.opposing_team %>
          <option value="<%= team.team_name %>">
              <%= team.team_name %>
          </option>
          <% end %>
        <% end %>
        </select>

      <div>
        <label for="win_loss_box">
          Bet Won/Lost/Pending
        </label>

        <select name="query_win_loss" id="query_win_loss">
          <option value="Win" <% if @the_bet.win_loss == "Win" %> <%= "selected" %> <% end %>>
              Win
          </option>
          <option value="Loss" <% if @the_bet.win_loss == "Loss" %> <%= "selected" %> <% end %>>
              Loss
          </option>
          <option value="Pending" <% if @the_bet.win_loss == "Pending" %> <%= "selected" %> <% end %>>
              Pending
          </option>
        </select>

      </div>

      <!--<div>
        <label for="odds_box">
          Odds
        </label>

        <input type="text" id="odds_box" name="query_odds" value="<%= @the_bet.odds %>">
      </div>-->

      <div>
        <label for="wager_box">
          Wager
        </label>

        <input type="text" id="wager_box" name="query_wager" value="<%= @the_bet.wager %>">
      </div>

      <!--<div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_bet.owner_id %>">
      </div>-->

      <!--<div>
        <label for="money_won_lost_box">
          Money won lost
        </label>

        <input type="text" id="money_won_lost_box" name="query_money_won_lost" value="<%= @the_bet.money_won_lost %>">
      </div>

      <div>
        <label for="team_id_bet_box">
          Team id bet
        </label>

        <input type="text" id="team_id_bet_box" name="query_team_id_bet" value="<%= @the_bet.team_id_bet %>">
      </div>

      <div>
        <label for="opposing_team_id_box">
          Opposing team
        </label>

        <input type="text" id="opposing_team_id_box" name="query_opposing_team_id" value="<%= @the_bet.opposing_team_id %>">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count" value="<%= @the_bet.likes_count %>">
      </div>-->

      <button>
        Update bet
      </button>
    </form>
  </div>
</div>

