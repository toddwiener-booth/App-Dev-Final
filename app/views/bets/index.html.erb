      <% @list_of_bets.each do |a_bet| %>
      <tr>
        <!--<td>
          <%= a_bet.id %>
        </td>-->

        <td>
          <%= a_bet.team_bet %>
        </td>

        <td>
          <%= a_bet.favorite_or_underdog %>
        </td>

        <td>
          <%= a_bet.opposing_team %>
        </td>

        <td>
          <%= a_bet.odds %>
        </td>

        <td>
